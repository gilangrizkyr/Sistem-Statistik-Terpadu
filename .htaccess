# Disable directory browsing
Options -Indexes

# ----------------------------------------------------------------------
# Rewrite engine
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    Options +FollowSymlinks
    RewriteEngine On
    RewriteBase /DataInvest/

    # Pengecualian untuk file statis seperti gambar, CSS, dan JS
    RewriteCond %{REQUEST_URI} !^/Laporin/(assets|uploads|img|css|js)/

    # Menghapus trailing slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Mengarahkan ke index.php untuk rute yang tidak ditemukan
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([\s\S]*)$ index.php/$1 [L,NC,QSA]

    # Menjaga Authorization Header jika ada
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

<IfModule !mod_rewrite.c>
    # Jika mod_rewrite tidak tersedia, semua 404 akan diarahkan ke index.php
    ErrorDocument 404 index.php
</IfModule>

# Disable server signature
ServerSignature Off
